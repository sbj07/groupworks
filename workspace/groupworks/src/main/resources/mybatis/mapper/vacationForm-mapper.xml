<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="VacationFormMapper">
   
    <!-- 휴가신청서 조회 -->
 	<select id="SelectVacation" resultType="VacationFormVo">
	 	SELECT * 
	 	FROM VACATION_FORM 
		WHERE WRITER_NO = #{no}
		AND DEL_YN = 'N'
 	</select>
 	
 	<!-- 휴가신청서 결재대기 조회 -->
 	<select id="SelectIngVacationForm" resultType="VacationFormVo">
	 	 SELECT * 
	 	 FROM VACATION_FORM 
	 	 WHERE CATEGORY_NO = 
	 	 					(
	 	 					SELECT NO 
	 	 					FROM DOCUMENT_CATEGORY 
	 	 					WHERE CATEGORY = '결제대기'
	 	 					)
	  	 AND DEL_YN = 'N'
	</select>

		<!-- 휴가신청서 결재완료 조회 -->
 	<select id="SelectEdPayForm" resultType="PayFormVo">
	 	 SELECT * 
	 	 FROM VACATION_FORM 
	 	 WHERE CATEGORY_NO = 
	 	 					(
	 	 					SELECT NO 
	 	 					FROM DOCUMENT_CATEGORY 
	 	 					WHERE CATEGORY = '결제완료'
	 	 					)
	  	 AND DEL_YN = 'N'
	</select>
	
    <!-- 휴가신청서 등록 -->
 	<insert id="InsertVacation">
	 	INSERT INTO VACATION_FORM 
	 	(
	 		NO
	 		,VACATION_NO
	 		,WRITER_NO
	 		,FIRST_APPLY_NO
	 		,MID_APPLY_NO
	 		,LAST_APPLY_NO
	 		,CATEGORY_NO
	 		,START_TIME
	 		,FINISH_TIME
	 		,CONTENT
	 		,WRITE_DATE)
		VALUES 
		(
		    #{no}
		    ,#{vacationNo}
		    ,#{writerNo}
		    ,#{firstApplyNo}
		    ,#{midApplyNo}
		    ,#{lastApplyNo}
		    ,#{categoryNo}
			,DATE(#{startTime})
	      	,DATE(#{finishTime})
		    ,#{content}
		    ,#{writeDate}
		)
 	</insert>
 	
 	<!-- 휴가신청서 승인 -->
 	<update id="ApplyVacation">
	 	UPDATE VACATION_FORM 
	    SET CATEGORY_NO = 
	                      (
	                      SELECT NO 
	                      FROM DOCUMENT_CATEGORY 
	                      WHERE CATEGORY = '승인'
	                      ) 
	    WHERE NO = #{no};
 	</update>
 	
 	<!-- 휴가신청서 반려 -->
 	<update id="RejectionVacation">
	 	UPDATE VACATION_FORM 
	    SET CATEGORY_NO = 
	                      (
	                      SELECT NO 
	                      FROM DOCUMENT_CATEGORY 
	                      WHERE CATEGORY = '반려'
	                      ) 
	    WHERE NO = #{no};
 	</update>

 	 <!-- 휴가신청서 삭제 -->
 	<update id="QuitVacation">
	 	UPDATE VACATION_FORM 
	 		SET DEL_YN = 'Y' 
	 	WHERE NO = #{no}
 	</update>
 	
</mapper>