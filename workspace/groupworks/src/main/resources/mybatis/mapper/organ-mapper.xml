<!-- 조직도 생성 -->
	<insert id="insert">
		INSERT INTO ORGAN(
		    ORG_NO
		    , MEMBER_NO
		    , NAME
		    , PROFILE
		    , ID
		    , EMAIL
		    , TEL
		    , ADDRESS
		    )
		VALUES (
		    SEQ_ORGAN_NO.NEXTVAL
		    , #{memberNo}
		    , #{name}
		    , #{profile}
		    , #{id}
		    , #{email}
		    , #{tel}
		    , #{address}
		    )	
	</insert>
	
