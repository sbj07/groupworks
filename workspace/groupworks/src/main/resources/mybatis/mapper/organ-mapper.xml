		SELECT
			C.NAME as companyName
		    , O.PROFILE
		    , D.NAME as departName
		    , M.NAME
		    , P.NAME as positionName
		    , M.TEL
		    , M.EMAIL
		FROM MEMBER M
		JOIN COMPANY C ON M.NO = C.NO
		JOIN DEPARTMENT D ON M.NO = D.NO
		JOIN ORGAN O ON M.NO = O.ORG_NO
		JOIN POSITION P ON M.NO = P.NO
		WHERE DEL_YN = 'N'
		ORDER BY M.NO DESC
	</select>
	
	<select id="detail" resultType="com.groupworks.app.organ.vo.OrganVo">
		SELECT
		    ORG_NO
		    , MEMBER_NO
		    , PROFILE
		    , DEPARTMENT
		    , POSITION
		    , NAME
		    , TEL
		FROM ORGAN
		WHERE MEMBER_NO = #{memberNo}
		AND DELETE_YN = 'N'
	</select>
	
<!-- 	수정 -->
	<update id="edit">
		UPDATE MEMBER
		SET
		<trim prefixOverrides=",">
			<if test=" name != null and name != '' ">
				NAME = #{name}
			</if>
			<if test=" departNo != null and departNo != '' ">
			    , DEPART_NO = #{departNo}
			</if>
			<if test=" positionNo != null and positionNo != '' ">
			    , POSITION_NO = #{positionNo}
		    </if>
		    <if test=" tel != null and tel != '' ">
			    , TEL = #{tel}
		    </if>
		    <if test=" email != null and email != '' ">
			    , EMAIL = #{email}
		    </if>
		    <if test=" profile != null and profile != '' ">
			    , PROFILE = #{profile}
		    </if>
	    </trim>
		WHERE NO = #{no}
		AND DEL_YN = 'N'
	</update>
	
<!-- 	삭제 -->
	<update id="delete">
		UPDATE MEMBER
		SET DEL_YN = 'Y'
		WHERE NO = #{no}
	</update>
